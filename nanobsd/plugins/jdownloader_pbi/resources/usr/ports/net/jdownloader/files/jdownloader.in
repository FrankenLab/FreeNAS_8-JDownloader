#!/bin/sh

#
# PROVIDE: jdownloader
# REQUIRE: LOGIN
# KEYWORD: shutdown
#
# Add the following line to /etc/rc.conf[.local] to enable jdownloader:
#
# jdownloader_enable="YES"

. /etc/rc.subr

name=jdownloader
rcvar=jdownloader_enable
command=%%PREFIX%%/sbin/jdownloaderd

load_rc_config $name

jdownloader_user=${jdownloader_user-"www"}

_dirs="/var/db/jdownloader /var/log/jdownloader"
start_precmd="mkdir -p $_dirs; chown $jdownloader_user $_dirs"
command_args="$jdownloader_args &"

stop_cmd="$command -stop"

run_rc_command $1
